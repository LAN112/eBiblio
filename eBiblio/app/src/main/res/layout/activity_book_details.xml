<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cracersy.ebiblio.BookDetails">

    <ImageView
        android:id="@+id/cover_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
         />

    <TextView
        android:id="@+id/tytul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cover_img"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="60sp"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="2dp" />


    <TextView
        android:id="@+id/autor"
        android:layout_below="@+id/tytul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/wydawnictwo"
        android:layout_below="@+id/autor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/rok_wydania"
        android:layout_below="@+id/wydawnictwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="20sp" />



    <Button
        android:id="@+id/opis"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_above="@+id/zapamietaj"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/Opis" />

    <Button
        android:id="@+id/zapamietaj"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_above="@+id/zarezerwuj"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/Zapamietaj" />

    <Button
        android:id="@+id/zarezerwuj"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/Zarezerwuj" />




</RelativeLayout>
